
<section class="phx-chat">
  <div class="phx-chat-container">
    <div class="phx-chat-header">
      <h1>Welcome, <span id="name"></span>!</h1>
    </div>
    <div class="phx-chat-body">
      <ul id="messages">
      </ul>
    </div>
    <input type="text" id="message" placeholder="Type your message here...">
    <button id="send">Send</button>
  </div>
</section>